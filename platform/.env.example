# Zakat Platform Environment Configuration
# Copy this file to .env and configure the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zakatplatform
DB_USER=zakat
DB_PASSWORD=secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Hyperledger Fabric Configuration
FABRIC_CONFIG_PATH=../config
FABRIC_WALLET_PATH=./wallet
FABRIC_CHANNEL=zakatchannel
FABRIC_CHAINCODE=zakat

# Email Configuration (SMTP)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=720h

# Mock Payment Configuration (MVP Phase 1)
MOCK_PAYMENT_DELAY=30s

# Server Configuration
PORT=3002
GIN_MODE=development
